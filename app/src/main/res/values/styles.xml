<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleDescriptionCardView" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/size_text_description_12</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/colorTextDescription</item>
    </style>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/size_text_title_14</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleTitleCardView14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/size_text_title_14</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorTextCategory</item>
    </style>

    <style name="StyleTitle20" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/size_text_title_20</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorTextCategory</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="android:paddingVertical">@dimen/margin_normal_10</item>
        <item name="android:paddingHorizontal">@dimen/margin_normal_20</item>
        <item name="cornerRadius">@dimen/margin_small_8</item>
    </style>

</resources>